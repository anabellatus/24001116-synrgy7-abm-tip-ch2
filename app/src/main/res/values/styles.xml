<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Tip.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/classy_vogue_regular</item>
    </style>

    <style name="Theme.Tip.TextTitle" parent="Theme.Tip.TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Tip.TextSubTitle" parent="Theme.Tip.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="layout_constraintStart_toEndOf">@id/tip_options</item>
    </style>

    <style name="Theme.Tip.Text" parent="Theme.Tip.TextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Tip.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:checked">true</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Theme.Tip.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">15dp</item>
    </style>
</resources>